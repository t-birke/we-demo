<apex:page contentType="text/css">
    html {
    height: 100%;
    font-family: "Salesforce Sans";
    overflow: hidden;
    }
    html body * {
    box-sizing: border-box;
    }
    
    html body {
    margin: 0;
    }
    
    .background {
    position: absolute;
    top: 0;
    left: 0;
    z-index: -2;
    height: 100vh;
    width: 100vw;
    background-position:center;
    background-size: cover;
    background-repeat: no-repeat;
    }
    
    .main {
    display: flex;
    flex-direction: column;
    justify-content: center;
    }
    
    .header {
    display:flex;
    flex-direction: column;
    
    width: 100%;
    
    padding: 1em;
    
    background: rgb(244, 246, 249);
    background: rgba(0, 0, 0, 0.75);
    color: white;
    font-weight: 300;
    }
    
    .header .header-title {
    font-size: 1.5em;
    }
    .header .header-subtitle{
    font-size: 1em;
    }
    
    .actions {
    display:flex;
    flex-flow: column nowrap;
    align-self: center;
    justify-self: center;
    align-items: center;
    
    overflow-x: hidden;
    overflow-y: auto;
    
    width: 100%;
    height: calc(100vh - 84px);
    padding: 2em 1em;
    }
    
    .action {
    width: 100%;
    max-width: 400px;
    margin-bottom: 1em;
    }
    
    .action-button {
    max-width: 400px;
    width: 100%;
    padding: .75em;
    border: 1px solid rgb(81, 201, 131);
    border-radius: .25em;
    background-color:rgba(81, 201, 131,0.9);
    color: rgba(255,255,255,.9);
    font-size: 1.5em;
    font-weight: 300;
    transition: all .15s ease-in-out;
    }
    
    .action-button:hover {
    cursor:pointer;
    background-color:rgba(81, 201, 131,1);
    color: #eee;
    }
    
    .action-button.active {
    border: 1px solid rgb(212, 80, 76);
    background-color:rgba(212, 80, 76,0.75);
    }
    
    .action-button.active:hover {
    background-color:rgba(200,25,25,1);
    }
    
</apex:page>