                 <apex:includeScript value="{!$Resource.sdo_tools_json2}"/>
                 <apex:includeScript value="{!$Resource.sdo_tools_jquery_cometd}"/>
                 
                 // Connect to the CometD endpoint
                    $.cometd.init({
                        url: window.location.protocol+'//'+window.location.hostname+'/cometd/28.0/',
                        requestHeaders: { Authorization: 'OAuth {!$Api.Session_ID}'},
                       // logLevel: 'debug',
                        'appendMessageTypeToURL': false
                    });
            

                   // Subscribe to a topic. JSON-encoded update will be returned
                   // in the callback
                   $.cometd.subscribe('/topic/SDOToolNotice', function(message) {
              
                            $('#NewToolNotification').css('visibility','visible');
                            
                    });
                
                </script>

                <script>
                $("document").ready( function() {
                   
                   
                    var eList = document.getElementsByClassName('icon-count');
                    var i =0;
                    for(i=0;i<eList.length;i++) {
                           eList[i].innerHTML = i+1; 
                    }

                    // Set the 'data-tab' attribute on the 'page-content' element in order to 'activate' a particular tab
                    // Feel free to replace this functionality with something that actually makes sense
                    var activeTabData = $(".page-content").attr("data-tab");
                    if( activeTabData ) {
                        console.log("current activeTabData: " + activeTabData);             
                        switch ( activeTabData ) {
                            case "home":
                                $("#sidebar-tab-home").addClass("active"); 
                                break;
                            case "signup":
                                $("#sidebar-tab-signup").addClass("active"); 
                                break;
                            case "myshifts":
                                $("#sidebar-tab-myshifts").addClass("active"); 
                                break;
                            case "admin":
                                $("#sidebar-tab-admin").addClass("active"); 
                                break;
                            default:
                                console.log("You need to set a valid 'data-tab' on the '.page-content' element.");
                                break;
                        }
                    } else {
                        console.log("You need to set a valid 'data-tab' on the '.page-content' element.");
                    }
                });

                function reportAnIssue() {
                    var s = "<p>Please take a look at the <a href='https://docs.google.com/a/salesforce.com/spreadsheets/d/1k3CPIa3nB6j2W5RchjvY1b_e7rGM5ScdqGhnFXH2hQ4/edit#gid=0' target='_blank'>Known Issues &amp; Workarounds</a> document featured in the sidebar of the SDO Updates group in 62 org. If the error you're experiencing isn't listed there, please post to the SDO Updates chatter group.<p><a target='_blank' href='https://org62.my.salesforce.com/_ui/core/chatter/groups/GroupProfilePage?g=0F91t000000GsVS'>Click Here to login to 62 org and navigate to the SDO Updates Chatter Group</a></p> ";
                    showModal('Report an Issue',s);
                }
                </script>
